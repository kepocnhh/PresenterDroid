<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/nig_rl"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/cblack">
    <ListView
        android:id="@+id/nig_lv"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/nig_tv_name">
    </ListView>
    <Button
        android:id="@+id/nig_b_engage"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Проснуться"
        android:textColor="@color/text_button"
        android:background="@drawable/enter_button"
        android:layout_alignParentBottom="true"/>
    <TextView
        android:id="@+id/nig_tv_asleep"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/cwhite"
        android:text="Проснуться"
        android:gravity="center"
        android:layout_above="@+id/nig_sb_engage"/>
    <SeekBar
        android:id="@+id/nig_sb_engage"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"/>

    <TextView
        android:id="@+id/nig_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/cblue"
        android:textSize="29sp"
        android:text="player"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/nig_b_engage"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>