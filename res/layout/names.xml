<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@android:color/white"
    android:id="@+id/nl"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">
    <TextView
        android:id="@+id/n_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="к выбору ролей -->"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <ListView
        android:id="@+id/n_lv1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@+id/n_textView"
        android:layout_above="@+id/n_et_name"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">
    </ListView>
    <Button
        android:id="@+id/n_b_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:onClick="b_add"
        android:layout_above="@+id/n_tv_mess"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:id="@+id/n_et_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textCapWords"
        android:text=""
        android:hint="Имя игрока"
        android:ems="10"
        android:layout_above="@+id/n_cb_bot"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:id="@+id/n_cb_bot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="bot"
        android:layout_alignBottom="@+id/n_b_add"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/n_tv_mess"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/cred"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>